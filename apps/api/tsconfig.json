{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "lib": ["ES2022"],
    "types": ["node"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@drizzle/*": ["src/endpoints/drizzle/*"],
      "@repositories/*": ["src/endpoints/repositories/*"],
      "@admin/*": ["src/endpoints/admin/*"],
      "@auth/*": ["src/endpoints/auth/*"],
      "@users/*": ["src/endpoints/users/*"],
      "@posts/*": ["src/endpoints/posts/*"],
      "@comments/*": ["src/endpoints/comments/*"],
      "@tags/*": ["src/endpoints/tags/*"],
      "@categories/*": ["src/endpoints/categories/*"]
    }
  },
  "include": [
    "src/**/*",
    "messages/**/*",
    "config.ts",
    "eslint.config.mjs",
    "process.d.ts",
    "dto/**/*",
    "code/**/*",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
